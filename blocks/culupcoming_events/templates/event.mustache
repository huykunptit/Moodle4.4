{{!
    @template block_culupcoming_events/event

    CUL event view.

    The purpose of this template is to render a single event.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region data-action

    Example context (json):
    {
    }
}}

<li id="{{id}}_{{timestart}}" class="item">
    <div
        class="event clearfix"
        data-eventtype-{{calendareventtype}}="1"
        data-region="event-item"
    >
        <div class="avatar">
            {{{img}}}
        </div>
        <div class="notificationtext">
            <a
                data-type="event"
                data-action="view-event"
                data-event-id="{{id}}"
                href="{{viewurl}}"
            >
                {{{description}}}
            </a>
            {{{formattedtime}}}
        </div>
        <div class="activityicon">
            {{#icon}}{{#pix}} {{key}}, {{component}}, {{alttext}} {{/pix}}{{/icon}}
        </div>
    </div>
    <div class="meta">
        <span class="timeuntil">{{timeuntil}}</span>
        <a class="contexturls" href="{{viewurl}}">
            Chi tiáº¿t
        </a>
    </div>
</li>

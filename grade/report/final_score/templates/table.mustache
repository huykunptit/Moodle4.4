                        <th scope="col" class="text-center">Điểm TN TH</th>
                        <th scope="col" class="text-center">Điểm BTL</th>
                    </tr>
                </thead>
                <tbody>
                    {{#students}}
                    <tr>
                        <td  class="text-center">{{index}}</td>
                        <td  class="text-center">{{student_id}}</td>
                        <td >{{first_name}}</td>
                        <td>{{last_name}}</td>
                        <td  class="text-center">{{class}}</td>
                        <td  class="text-center">{{attendance_grade}}</td>
                        <td  class="text-center">{{assignment_grade}}</td>
                        <td  class="text-center">{{practice_grade}}</td>
                        <td  class="text-center">{{final_project_grade}}</td>
                    </tr>
                    {{/students}}
                </tbody>
            </table>
        </div>
    </div>
</div>

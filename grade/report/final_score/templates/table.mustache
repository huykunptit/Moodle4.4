<div class=" grade-report-container">
    <div class></div>
    <div class="main-section">
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th colspan="9" class="text-center">Bảng điểm thành phần</th>
                    </tr>
                </thead>
                <thead class="thead-white">
                    <tr>
                        <th scope="col"  class="text-center">Số TT</th>
                        <th scope="col"  class="text-center">Mã SV</th>
                        <th scope="col" class="text-center">Họ, đệm</th>
                        <th scope="col" class="text-center">Tên</th>
                        <th scope="col" class="text-center">Lớp</th>
